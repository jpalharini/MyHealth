<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.palharini.myhealth"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyHealth" >
        <activity
            android:name=".TelaLogin"
            android:label="@string/title_activity_tela_login" >
        </activity>
        <activity android:name=".TelaCadastroUsuario" >
        </activity>
        <activity
            android:name=".TelaCadastroIndicador"
            android:label="@string/title_activity_tela_cadastro_indicador" >
        </activity>
        <activity
            android:name=".TelaEdicaoUsuario"
            android:label="@string/title_activity_tela_edicao_usuario" >
        </activity>
        <activity
            android:name=".TelaEdicaoIndicador"
            android:label="@string/title_activity_tela_edicao_indicador" >
        </activity>
        <activity
            android:name=".TelaPrincipal"
            android:label="@string/title_activity_tela_principal" >
        </activity>
        <activity
            android:name=".TelaConfiguracoes"
            android:label="@string/title_activity_tela_configuracoes" >
        </activity>
        <activity
            android:name=".TelaInicial"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TelaAcompanhamento" >
        </activity>
        <activity
            android:name=".TelaCadastroPreferencias"
            android:label="@string/title_activity_tela_cadastro_preferencias" >
        </activity>
    </application>

</manifest>